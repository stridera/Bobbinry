{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Override base for browser SDK package
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    // Emit configuration for library
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Browser SDK specific - no additional types needed (DOM in lib)
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}