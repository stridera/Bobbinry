    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@bobbinry/sdk": "workspace:*",
    "react": "^18.2.0"
  },
  "dependencies": {
    "@bobbinry/types": "workspace:*",
    "@bobbinry/ui-components": "workspace:*",
    "@tiptap/extension-character-count": "^3.6.2",
    "@tiptap/extension-placeholder": "^3.6.2",
    "@tiptap/pm": "^3.6.2",
    "@tiptap/react": "^3.6.2",
    "@tiptap/starter-kit": "^3.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.14",
    "jest": "^29.7.0",
    "jsdom": "^27.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.0.0"
  }
