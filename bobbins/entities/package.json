{
  "name": "@bobbinry/entities",
  "version": "1.0.0",
  "description": "Configurable entity system for characters, spells, locations, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./views/*": "./dist/views/*.js",
    "./panels/*": "./dist/panels/*.js",
    "./templates/*": "./dist/templates/*.js",
    "./components/*": "./dist/components/*.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests",
