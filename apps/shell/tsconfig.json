{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Override base for Next.js React app
    "target": "ES2017",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    // Next.js specific
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    // Path mapping
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Relax some strict rules for Next.js development
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // Jest and testing library types
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}